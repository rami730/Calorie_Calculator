<Window x:Class="Calorie_Calculator.SearchFile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sök Mat" Height="600" Width="400">
    <Grid>
        <!-- Define Grid Layout -->
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- Search Field -->
            <RowDefinition Height="*"/>
            <!-- Results -->
            <RowDefinition Height="40"/>
            <!-- Footer -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Background="LightGray">
            <TextBlock Text="LOGO" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Margin="10"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0">
                <Button Content="←" Width="50" Height="30" Click="BackButton_Click"/>
                <TextBlock Text="Måltiden (Frukost)" VerticalAlignment="Center" FontSize="16" Margin="10,0,0,0"/>
            </StackPanel>
        </StackPanel>

        <!-- Search Field -->
        <StackPanel Grid.Row="1" Margin="10,10,10,10">
            <Grid>
                <TextBox Name="SearchTextBox" Height="30" Margin="0,0,0,0" TextChanged="SearchTextBox_TextChanged"/>
                <TextBlock Name="PlaceholderText" Text="Sök mat..." Foreground="Gray" VerticalAlignment="Center"
                           Margin="5,0,0,0" IsHitTestVisible="False"/>
            </Grid>
            <Button Content="Sök" Height="30" Width="100" HorizontalAlignment="Center" Margin="0,10,0,0" Click="SearchButton_Click"/>
        </StackPanel>

        <!-- Results Section -->
        <DataGrid Grid.Row="2" Name="FoodDataGrid" Margin="10" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name of the Food" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Calories per 100g" Binding="{Binding Calories}" Width="*"/>
                <DataGridTextColumn Header="Protein" Binding="{Binding Protein}" Width="*"/>
                <DataGridTextColumn Header="Kolhydrater" Binding="{Binding Carbs}" Width="*"/>
                <DataGridTextColumn Header="Fett" Binding="{Binding Fat}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Footer -->
        <Button Grid.Row="3" Content="AVBRYT" Height="40" Background="LightGray" Click="CancelButton_Click"/>
    </Grid>
</Window>
